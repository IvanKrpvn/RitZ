<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewPager.onBoard.fragments.trackDriverMovement.TrackDriverMovementFragment"
    app:layoutDescription="@xml/fragment_track_driver_movement_scene">



    <TextView
        android:id="@+id/track_drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_24sdp"
        android:fontFamily="@font/noto_sans"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="-6sp"
        android:text="@string/track_drive_text"

        android:textAppearance="@style/onBoarding_textTitle_style"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="@dimen/_68sdp" />







    <TextView
        android:id="@+id/track_the_m"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_16sdp"

        android:layout_marginHorizontal="@dimen/_24sdp"
        android:text="@string/track_the_m_text"
        android:textAppearance="@style/onBoarding_textSmall_style"
        android:lineSpacingExtra="1sp"
        android:translationY="-0.47sp"
        android:gravity="center_horizontal|top"
        android:fontFamily="@font/noto_sans"
        app:layout_constraintTop_toBottomOf="@id/track_drive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />




    <ImageView
        app:layout_constraintBottom_toTopOf="@id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trackImg"
        android:src="@drawable/onboarding_track_image"
        app:layout_constraintTop_toBottomOf="@id/track_the_m"
        android:layout_marginTop="@dimen/_20sdp"

        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonNext"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/shape_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trackImg"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_15sdp"
            android:src="@drawable/arrow_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>