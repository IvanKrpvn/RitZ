<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enter_verification_code">

    <TextView
        android:id="@+id/verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/verification"
        android:textAppearance="@style/verification_textAverage_style"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/inputotp1"
        android:layout_width="@dimen/_51sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_11sdp"
        android:background="@drawable/verificationbox"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        app:layout_constraintEnd_toStartOf="@+id/inputotp2"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor"
        tools:layout_editor_absoluteY="199dp" />

    <EditText
        android:id="@+id/inputotp2"
        android:layout_width="@dimen/_51sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginEnd="@dimen/_11sdp"
        android:background="@drawable/verificationbox"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        app:layout_constraintEnd_toStartOf="@+id/inputotp3"
        tools:ignore="LabelFor"
        tools:layout_editor_absoluteY="199dp" />

    <EditText
        android:id="@+id/inputotp3"
        android:layout_width="@dimen/_51sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginEnd="@dimen/_11sdp"
        android:background="@drawable/verificationbox"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintEnd_toStartOf="@+id/inputotp4"
        tools:ignore="LabelFor"
        tools:layout_editor_absoluteY="199dp" />

    <EditText
        android:id="@+id/inputotp4"
        android:layout_width="@dimen/_51sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginEnd="@dimen/_35sdp"
        android:background="@drawable/verificationbox"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="LabelFor"
        tools:layout_editor_absoluteY="199dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:background="@drawable/background_btn_white"
        android:fontFamily="@font/noto_sans"
        android:text="@string/sing_in"
        android:textAppearance="@style/btn_text_style"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>