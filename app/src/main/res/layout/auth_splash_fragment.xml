<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".viewPager.onBoard.fragments.signUp.SignUpInTheAppFragment"
        app:layoutDescription="@xml/fragment_sign_up_in_the_app_scene">


        <ImageView
            android:id="@+id/sign_up_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_64sdp"
            android:src="@drawable/logo_full"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="@dimen/_68sdp" />


        <TextView
            android:id="@+id/you_can_reg"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/noto_sans"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="1sp"
            android:layout_marginBottom="@dimen/_48sdp"
            android:text="Select account type"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/individual"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:text="Sign up"
            android:textColor="@color/dark_grey"
            android:textSize="24sp"
            android:layout_marginBottom="@dimen/_8sdp"
            app:layout_constraintBottom_toTopOf="@+id/you_can_reg"
            app:layout_constraintEnd_toEndOf="@+id/sign_up_in"
            app:layout_constraintStart_toStartOf="@+id/sign_up_in" />

        <TextView
            android:id="@+id/individual"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:background="@drawable/background_button_highlight"
            android:fontFamily="@font/noto_sans"
            android:paddingHorizontal="@dimen/_18sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="Individual"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textColor="@color/red"
            android:textSize="16sp"
            app:drawableRightCompat="@drawable/red_arrow"
            app:layout_constraintBottom_toTopOf="@+id/legal_entity"
            tools:layout_editor_absoluteX="31dp" />

        <TextView
            android:id="@+id/legal_entity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:background="@drawable/background_button_highlight"
            android:fontFamily="@font/noto_sans"
            android:paddingHorizontal="@dimen/_18sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="Legal entity"
            android:textColor="@color/red"
            android:gravity="center"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:layout_marginBottom="@dimen/_48sdp"
            app:drawableRightCompat="@drawable/red_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="31dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>